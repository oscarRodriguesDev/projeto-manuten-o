
{
  "API Template": {
    "prefix": "createapi",
    "body": [	
    "const express = require('express')",
    "const cors = require('cors')",
    "const bodyParser = require('body-parser')",
    "const app = express()",
    "const port = 3001",
    "var serviceAccount = require('path_da_credencia_firebase')",
    "var admin = require('firebase-admin')",
    "",
    "",

    "app.use(cors())",
    "app.use(bodyParser.json())",
    "",
    
    "admin.initializeApp({",
      "credential: admin.credential.cert(serviceAccount),",
    "})",
    "",


    "app.get('/', (req, res) => {",
    "  res.json({ message: 'Rota GET funcionando!' })",
    "})",
    "",

    "app.post('/', (req, res) => {",
    "  const { body } = req",
    "  res.json({ message: 'Rota POST funcionando!', data: body })",
    "})",
    "",
    "",

    "app.put('/:id', (req, res) => {",
    "  const { id } = req.params",
    "  const { body } = req;",
    "  res.json({ message: `Rota PUT funcionando para o ID ${id}!`, data: body })",
    "})",
    "",
    "app.delete('/:id', (req, res) => {",
    "  const { id } = req.params",
    "  res.json({ message: `Rota DELETE funcionando para o ID ${id}!` })",
    "})",
    "",

    "app.listen(port, () => {",
    "  console.log(`Servidor rodando em http://localhost:${port}`)",
    "})"
    ],
    "description": "CÃ³digo base para uma API em Express com Node.js"
  }
  }
  
